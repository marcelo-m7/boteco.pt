{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-tests",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "noEmit": false,
    "types": [
      "node"
    ],
    "rootDir": "."
  },
  "include": [
    "src/components/home/**/*.ts",
    "src/components/home/**/*.tsx",
    "src/components/reactbits/**/*.ts",
    "src/components/reactbits/**/*.tsx",
    "src/components/ui/**/*.ts",
    "src/components/ui/**/*.tsx",
    "src/lib/**/*.ts",
    "src/lib/**/*.tsx",
    "src/utils/**/*.ts",
    "src/test-utils.tsx",
    "src/i18n.ts",
    "src/content/**/*.json",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/components/home/__tests__/**/*.test.tsx"
  ]
}
